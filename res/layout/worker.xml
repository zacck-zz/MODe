<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:weightSum="160.0" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="40.0"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgvwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="60.0"
        android:orientation="vertical"
        android:paddingBottom="20.0dip" >

        <TextView
            android:id="@id/tvSongName"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:text="\u0020"
            android:textColor="#ff00ffff"
            android:textSize="21.0sp" />

        <TextView
            android:id="@id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:text="\u0020"
            android:textColor="#ff00ffff"
            android:textSize="21.0sp" />

        <TextView
            android:id="@+id/tvD"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:text="Download"
            android:textColor="#ff00ffff"
            android:textSize="21.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="60.0" >

        <Button
            android:id="@+id/bprev"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableTop="@drawable/previ" />

        <Button
            android:id="@+id/bplay"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableTop="@drawable/play" />

        <Button
            android:id="@+id/bnext"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableTop="@drawable/next" />
    </LinearLayout>

</LinearLayout>